            on-keyup('keyPressed')
        />

        <input-password.big
            key='inputPassword'
            charsVisible=state.passwordVisible
            placeholder=trGeneric.password
            on-keyPressed('keyPressed')
            on-toggleVisibility('togglePasswordVisibility')
        />

        <input-password.big
            key='inputPasswordRetype'
            charsVisible=state.passwordVisible
            placeholder=trGeneric.passwordRetype
            on-keyPressed('keyPressed')
            on-toggleVisibility('togglePasswordVisibility')
