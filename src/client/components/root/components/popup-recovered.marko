import appm from 'js/app-manager'

class {
    onMount() {
        this.popupComponent = this.getComponent('popup')
    }

    // Functions.

    hide() {
        if(!this.visible) {
            return
        }

        this.popupComponent.hide()
    }

    hidden() {
        this.visible = false
    }

    keyPressed(event) {
