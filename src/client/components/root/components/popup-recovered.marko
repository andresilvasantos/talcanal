    }

    show() {
        if(this.visible) {
            return
        }

        this.visible = true

        this.popupComponent.show()
    }
}

$ const trRecovered = appm.tr('recovered') || {}

<popup.popup-recovered
    key='popup'
    class=input.class
    title=trRecovered.title
    on-hidden('hidden')
    on-keyPressed('keyPressed')
>
    <div.contents>
        <div.wrapper>
            <text-p.text>
                $!{trRecovered.text}
            </text-p>

            <button-text.button-agree.big.strong text=trRecovered.buttonAgree on-click('hide') />
        </div>
    </div>
</popup>

